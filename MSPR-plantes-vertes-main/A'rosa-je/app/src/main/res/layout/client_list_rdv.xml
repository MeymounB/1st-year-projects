<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"

		tools:context=".client.ClientAccueil">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

		<TextView
				android:id="@+id/attente_list_rdv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:paddingStart="20dp"
				android:text="Demandes en attente"
				android:textColor="@color/black"
				android:textSize="18sp" />


		<androidx.recyclerview.widget.RecyclerView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/vertical_recycle_view_list_rdv_attente"
				android:orientation="vertical"
				android:layout_marginTop="10dp"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginTop="250dp">

		<TextView
				android:id="@+id/acceptee_list_rdv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:paddingStart="20dp"
				android:text="Gardiennages planifiÃ©s"
				android:textColor="@color/black"
				android:textSize="18sp" />


		<androidx.recyclerview.widget.RecyclerView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/vertical_recycle_view_list_rdv_accepte"
				android:orientation="vertical"
				android:layout_marginTop="10dp"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginTop="500dp">

		<TextView
				android:id="@+id/a_garder_list_rdv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:paddingStart="20dp"
				android:text="Plantes que je dois garder"
				android:textColor="@color/black"
				android:textSize="18sp" />


		<androidx.recyclerview.widget.RecyclerView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/vertical_recycle_view_list_rdv_a_garder"
				android:orientation="vertical"
				android:layout_marginTop="10dp"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

	</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
