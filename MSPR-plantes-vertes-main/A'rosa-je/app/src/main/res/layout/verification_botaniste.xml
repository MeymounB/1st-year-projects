<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#1C1B1B">


	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:layout_marginStart="80dp">

		<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<TextView
					android:id="@+id/text_verif_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Verification d'identité"
					android:textColor="#FFFFFF"
					android:textSize="24sp"
					android:textStyle="bold" />

			<TextView
					android:id="@+id/text_info"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/text_verif_id"
					android:layout_marginTop="10dp"
					android:text="Afin de vérifier que vous êtes une véritable botaniste, veuillez ajouter un justificatif. \n\nUn administrateur vérifiera votre status dans les plus brefs délais :)"
					android:textColor="#808080"
					android:textSize="18sp" />


			<RelativeLayout
					android:id="@+id/btn_login"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_below="@+id/text_info"
					android:layout_marginTop="30dp">

				<Button
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:text="Upload"
						android:textColor="#FFFFFF"
						android:textSize="16sp"
						android:textStyle="bold" />

			</RelativeLayout>
		</RelativeLayout>
	</ScrollView>
</RelativeLayout>
